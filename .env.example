# My Hibachi Frontend Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=10000

# Application Configuration
VITE_APP_TITLE=My Hibachi
VITE_APP_DESCRIPTION=Premium Hibachi Catering Service
VITE_APP_URL=https://myhibachi.com
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_CHATBOT=true
VITE_ENABLE_BOOKING=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NEWSLETTER=true
VITE_ENABLE_ADMIN_PANEL=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_BOOKING_MIN_DAYS_ADVANCE=2
VITE_BOOKING_MAX_DAYS_ADVANCE=60
VITE_BOOKING_TIME_SLOTS=12:00 PM,3:00 PM,6:00 PM,9:00 PM

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_DEBOUNCE_DELAY=300
VITE_CACHE_EXPIRY=300000

# Development Configuration
VITE_DEBUG_MODE=true
VITE_SHOW_CONSOLE_LOGS=true
VITE_ENABLE_MOCK_API=false

# Security Configuration
VITE_ENABLE_HTTPS_ONLY=false
VITE_SESSION_TIMEOUT=3600000

# Contact Information
VITE_CONTACT_EMAIL=cs@myhibachichef.com
VITE_CONTACT_PHONE=555-HIBACHI
VITE_BUSINESS_ADDRESS=123 Main St, City, State 12345

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_FACEBOOK_PIXEL_ID=

# Maps Integration (Optional)
VITE_GOOGLE_MAPS_API_KEY=
